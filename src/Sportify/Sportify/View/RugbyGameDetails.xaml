<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sportify.View.RugbyGameDetails"
             xmlns:model="clr-namespace:Sportify.Model"
             xmlns:controller="clr-namespace:Sportify.Controller"
             x:DataType="controller:RugbyGameDetailsController"
             Title="RugbyGameDetails">
    <VerticalStackLayout>
        <Label
            Text="{Binding RugbyGame.Date, StringFormat='{0:dddd, dd MMMM yyyy HH:mm}'}"/>
        <Label
            Text="{Binding RugbyGame.Status.long, StringFormat='State: {0}'}"/>
        <Label
            Text="{Binding RugbyGame.League.Name, StringFormat='League: {0}'}"/>
        <Image
            Source="{Binding RugbyGame.League.Logo}" MaximumWidthRequest="100" MaximumHeightRequest="100"/>
        <Label Text="Periods"/>
        <Grid
            ColumnDefinitions="*, *, *, *, *, *"
            RowDefinitions="*, *, *">
            <Label Text="First period" Grid.Column="1"/>
            <Label Text="Second period" Grid.Column="2"/>
            <Label Text="First overtime" Grid.Column="3"/>
            <Label Text="Second overtime" Grid.Column="4"/>
            <Label Text="Final score" Grid.Column="5"/>
            <Label Text="{Binding RugbyGame.Teams.Home.Name}" Grid.Row="1"/>
            <Label Text="{Binding RugbyGame.Teams.Away.Name}" Grid.Row="2"/>
            <Label Text="{Binding RugbyGame.Periods.First.HomePoints}" Grid.Row="1" Grid.Column="1"/>
            <Label Text="{Binding RugbyGame.Periods.First.AwayPoints}" Grid.Row="2" Grid.Column="1"/>
            <Label Text="{Binding RugbyGame.Periods.Second.HomePoints}" Grid.Row="1" Grid.Column="2"/>
            <Label Text="{Binding RugbyGame.Periods.First.AwayPoints}" Grid.Row="2" Grid.Column="2"/>
            <Label Text="{Binding RugbyGame.Periods.Overtime.HomePoints}" Grid.Row="1" Grid.Column="3"/>
            <Label Text="{Binding RugbyGame.Periods.Overtime.AwayPoints}" Grid.Row="2" Grid.Column="3"/>
            <Label Text="{Binding RugbyGame.Periods.Second_overtime.HomePoints}" Grid.Row="1" Grid.Column="4"/>
            <Label Text="{Binding RugbyGame.Periods.Second_overtime.AwayPoints}" Grid.Row="2" Grid.Column="4"/>
            <Label Text="{Binding RugbyGame.Score.Home}" Grid.Row="1" Grid.Column="5"/>
            <Label Text="{Binding RugbyGame.Score.Away}" Grid.Row="2" Grid.Column="5"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>