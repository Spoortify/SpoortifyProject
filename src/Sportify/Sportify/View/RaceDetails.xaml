<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sportify.View.RaceDetails"
             Title="RaceDetails"
             xmlns:Controller="clr-namespace:Sportify.Controller"
             Shell.NavBarIsVisible="False"
             xmlns:Model="clr-namespace:Sportify.Model">
    <ContentPage.BindingContext>
        <Controller:RaceDetailsController/>
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout>
            <Grid ColumnDefinitions="*,*,*,*,*,*,*,*">
                <Label Text="POSITION" HorizontalOptions="Center"/>
                <Label Text="TEAM" Grid.Column="1" HorizontalOptions="Center"/>
                <Label Text="NUMBER" Grid.Column="2" HorizontalOptions="Center"/>
                <Label Text="DRIVER" Grid.Column="3" HorizontalOptions="Center"/>
                <Label Text="TIME" Grid.Column="4" HorizontalOptions="Center"/>
                <Label Text="LAPS COMPLETED" Grid.Column="5" HorizontalOptions="Center"/>
                <Label Text="STARTING POSITION" Grid.Column="6" HorizontalOptions="Center"/>
                <Label Text="PIT STOP" Grid.Column="7" HorizontalOptions="Center"/>
            </Grid>
            <CollectionView ItemsSource="{Binding RaceDetails.Response}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="Model:DetailResponse">
                        <Frame BackgroundColor="#5B5A5A">
                            <Grid ColumnDefinitions="*,*,*,*,*,*,*,*">
                                <Label Text="{Binding Position}" HorizontalOptions="Center"/>
                                <Image Source="{Binding Team.Logo}" Grid.Column="1" HorizontalOptions="Center"/>
                                <Label Text="{Binding Driver.Number}" Grid.Column="2" HorizontalOptions="Center"/>
                                <Label Text="{Binding Driver.Name}" Grid.Column="3" HorizontalOptions="Center"/>
                                <Label Text="{Binding Time}" Grid.Column="4" HorizontalOptions="Center"/>
                                <Label Text="{Binding Laps}" Grid.Column="5" HorizontalOptions="Center"/>
                                <Label Text="{Binding Grid}" Grid.Column="6" HorizontalOptions="Center"/>
                                <Label Text="{Binding Pits}" Grid.Column="7" HorizontalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>