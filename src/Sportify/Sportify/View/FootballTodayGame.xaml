<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sportify.View.FootballTodayGame"
             xmlns:Controller="clr-namespace:Sportify.Controller"
             xmlns:Model="clr-namespace:Sportify.Model"
             Title="FootballTodayGame"
             Shell.NavBarIsVisible="False">
    <ContentPage.BindingContext>
        <Controller:FootballTodayGameController/>
    </ContentPage.BindingContext>
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding GameDay.Response}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="Model:GameDayResponse">
                    <Frame>
                        <HorizontalStackLayout>
                            <Label Text="{Binding League.Name}"/>
                            <Label Text="{Binding Teams.Home.Name}"/>
                            <Label Text="{Binding Teams.Away.Name}"/>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>