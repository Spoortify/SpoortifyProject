                <Image Source="{Binding PremierLeague[0].League.Logo}"/>
                <Label Text="Premier League" Grid.Column="1"/>
            </Grid>
            <CollectionView ItemsSource="{Binding PremierLeague}" IsVisible="{Binding Lists[0]}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="Model:GameDayResponse">
                        <Frame CornerRadius="0">
                            <Grid RowDefinitions="*" ColumnDefinitions="*,*,*,*,*,*,*">
                                <Image Source="{Binding Teams.Home.Logo}" />
                                <Label Text="{Binding Teams.Home.Name}" Grid.Column="1"/>
                                <Label Text="{Binding Goals.Home}" Grid.Column="2"/>
                                <Label Text="-" Grid.Column="3"/>
                                <Label Text="{Binding Goals.Away}" Grid.Column="4"/>
                                <Label Text="{Binding Teams.Away.Name}" Grid.Column="5"/>
                                <Image Source="{Binding Teams.Away.Logo}" Grid.Column="6"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

