                            Margin="0,10,0,10"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            WidthRequest="125"
                            HeightRequest="50"/>
                <Button Text="CONFIRM" Command="{Binding InitCommand}"/>
            </HorizontalStackLayout>
            <Label Text="{Binding Today, StringFormat='{0:D}'}"/>
