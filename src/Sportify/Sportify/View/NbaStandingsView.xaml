<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sportify.View.NbaStandingsView"
             xmlns:controller="clr-namespace:Sportify.Controller"
             xmlns:model="clr-namespace:Sportify.Model"
             x:DataType="controller:NbaStandingsController"
             Title="NbaStandingsView">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding SeasonStatsList}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:NbaSeasonStandings">
                    <Frame>
                        <Label Text="{Binding }"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>