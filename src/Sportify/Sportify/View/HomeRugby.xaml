<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sportify.View.HomeRugby"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:model="clr-namespace:Sportify.Model"
             xmlns:controller="clr-namespace:Sportify.Controller"
             x:DataType="controller:HomeRugbyController"
             Title="HomeRugby">
    <ContentPage.BindingContext>
        <controller:HomeRugbyController/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout>
            <DatePicker MinimumDate="01/01/2008" 
                        Date="{Binding SelectedDate, StringFormat=dd/M/yyyy}" 
                        DateSelected="OnDateSelected"/>
            <ScrollView>
                <CollectionView ItemsSource="{Binding RugbyGame}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:RugbyGamePrincipalInformation">
                            <Frame BackgroundColor="#5B5A5A" HeightRequest="150">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <VerticalStackLayout>
                                        <Image Source="{Binding homeSquadImage}" HorizontalOptions="Center" MaximumWidthRequest="50" MaximumHeightRequest="50"/>
                                        <Label Text="{Binding homeSquadName}" TextColor="White" HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                    <Label Text="{Binding homeSquadScore}" Grid.Column="1" TextColor="White" HorizontalOptions="Center"/>
                                    <Label Text="{Binding awaySquadScore}" Grid.Column="2" TextColor="White" HorizontalOptions="Center"/>
                                    <VerticalStackLayout Grid.Column="3">
                                        <Image Source="{Binding awaySquadImage}" HorizontalOptions="Center" MaximumWidthRequest="50" MaximumHeightRequest="50"/>
                                        <Label Text="{Binding awaySquadName}" TextColor="White" HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                    
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
        </VerticalStackLayout>
    </ScrollView> 
</ContentPage>