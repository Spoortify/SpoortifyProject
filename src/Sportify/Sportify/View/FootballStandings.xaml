            <StackLayout>
                <Grid
                    RowDefinitions="Auto, Auto">
                    <CollectionView ItemsSource="{Binding Groups}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame>
                                    <Label Text="{Binding .}"></Label>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <CollectionView Grid.Row="1" ItemsSource="{Binding Football.Response[0].League.Standings}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="Model:FootballStandingsModel">
                                <Frame>
                                    <CollectionView ItemsSource="{Binding .}" Grid.Row="1">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="Model:FootballStandingsModel">
                                                <Frame BorderColor="Black" MaximumHeightRequest="100">
                                                    <Label Text="{Binding Team.Name}" TextColor="White"
                                                           HorizontalOptions="Center" VerticalOptions="Center"/>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>